{
    "name": "vscode-screwdriver",
    "displayName": "Screwdriver CD Pipeline Editor",
    "description": "Provides content assist for Screwdriver CD pipeline configuration yaml files.",
    "version": "0.0.1",
    "publisher": "wdstar",
    "repository": {
        "type": "git",
        "url": "https://github.com/wdstar/vscode-screwdriver.git"
    },
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Languages"
    ],
    "keywords": [
        "yaml",
        "screwdriver",
        "screwdriver.yaml"
    ],
    "contributes": {
        "languages": [{
            "id": "screwdriver-pipeline-yaml",
            "aliases": ["Screwdriver Pipeline", "screwdriver-pipeline-yaml"],
            "filenamePatterns": [
                "*screwdriver*.yaml",
                "*screwdriver*.yml"
            ],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "screwdriver-pipeline-yaml",
            "scopeName": "source.yaml",
            "path": "./syntaxes/yaml.tmLanguage"
        }]
    }
}
